@model HellsFilmsBlog

<main>
    <!-- blog-details-area -->
    <section class="blog-details-area blog-bg" data-background="/img/bg/blog_bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="blog-post-item blog-details-wrap">
                        <div class="blog-post-thumb">
                            @if (Model.HellsFilmsBlogPhoto != null)
                            {
                                var base64 = Convert.ToBase64String(Model.HellsFilmsBlogPhoto);
                                var imgSrc = string.Format("data:image/png;base64,{0}", base64);
                                <img class="primary-img" src="@imgSrc" height="480" width="857" alt="">
                            }
                        </div>
                        <div class="blog-post-content">
                            <div class="blog-details-top-meta">
                                <span class="user"><i class="far fa-user"></i> by <a href="#">Admin</a></span>
                                <span class="date"><i class="far fa-clock"></i>@Model.HellsFilmsBlogDate</span>
                            </div>
                            <h2 class="title">@Model.HellsFilmsBlogName</h2>
                            <p>
                                @Html.Raw(Model.HellsFilmsBlogDescription)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <aside class="blog-sidebar">
                        <div class="widget blog-widget">
                            <vc:tag />
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>
    <!-- blog-area-end -->

</main>
<!-- main-area-end -->



