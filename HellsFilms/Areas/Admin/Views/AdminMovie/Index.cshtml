@model IEnumerable<HellsFilmsMovie>

<section class="movie-area movie-bg" data-background="/img/bg/movie_bg.jpg">
	<div class="container">
		<div class="row align-items-end mb-60">
			<div class="col-lg-6">
				<div class="section-title text-center text-lg-left">
					
					<h2 class="title">Фильмы</h2>
					<a class="btn" asp-action="Create">Добавить фильм</a>
				</div>
			</div>
		</div>
		<div class="row tr-movie-active">
			@foreach (var movie in Model)
			{
				<div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer cat-one">
					<div class="movie-item movie-item-three mb-50">
						<div class="movie-poster">
							<img src="@movie.HellsFilmsMoviePhoto" height="430" width="303" alt="">
							<ul class="overlay-btn">
								<li><a asp-action="Edit" asp-route-id="@movie.HellsFilmsMovieID" class="btn">Редактировать</a></li>
								<li><a asp-action="Delete" asp-route-id="@movie.HellsFilmsMovieID" class="btn">Удаление</a></li>
							</ul>
						</div>
						<div class="movie-content">
							<div class="top">
								<h5 class="title"><a asp-action="Edit" asp-route-id="@movie.HellsFilmsMovieID">@movie.HellsFilmsMovieName</a></h5>
								<span class="date">@movie.HellsFilmsMovieDate</span>
							</div>
							<div class="bottom">
								<ul>
									<li><span class="quality">hd</span></li>
									<li>
										<span class="rating"><i class="fas fa-thumbs-up"></i>@movie.HellsFilmsMovieRating</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>
